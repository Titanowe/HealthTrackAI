<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Existing UI elements -->
    <EditText
        android:id="@+id/waterInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter water intake (in cups)"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/exerciseInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter exercise duration (in minutes)"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/sleepInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter sleep duration (in hours)"
        tools:ignore="TouchTargetSizeCheck" />

    <!-- New Date Picker -->
    <Button
        android:id="@+id/datePickerBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Date" />

    <TextView
        android:id="@+id/selectedDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selected Date: None"
        android:textSize="16sp" />

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit" />

    <!-- Other buttons -->
    <Button
        android:id="@+id/viewDetailsBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Details" />

    <Button
        android:id="@+id/clearBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear Data"
        tools:ignore="VisualLintButtonSize" />

    <!-- Weekly Data Text -->
    <TextView
        android:id="@+id/weeklyDataText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Weekly Data"
        android:textSize="18sp" />

</LinearLayout>
